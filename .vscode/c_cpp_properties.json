{
    "version": 4,
    "configurations": [
        {
            "name": "Linux_ZerOS_kernel",
            "includePath": [
                "${workspaceFolder}/zerOS/include/"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "${workspaceFolder}/zerOS/include"
                ]
                //"limitSymbolsToIncludedHeaders": true,
                //"databaseFilename": ""
            },
            "defines": [
                //"_GNU_SOURCE=1",
                //"_LARGEFILE64_SOURCE=1",
                //"_FILE_OFFSET_BITS=64",
                //"_GLIBCXX_CONCEPT_CHECKS=1",
                //"_GLIBCXX_ASSERTIONS=1",
                //"_FORTIFY_SOURCE=2",
                //"_LARGEFILE_SOURCE=1",
                //"_TIME_BITS=64"
            ],
            /* "compilerPath": "${workspaceFolder}/toolchain/install/bin/x86_64-elf-gcc", */
            "cStandard": "gnu23",
            "cppStandard": "gnu++23",
            "intelliSenseMode": "linux-clang-x64",
            "compilerArgs": [
                "-O3",
                "-ffreestanding",
                "--target=x86_64-unknown-none-elf"
            ],
            "mergeConfigurations": true
        }
    ]
}